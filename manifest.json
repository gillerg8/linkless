{
  	"manifest_version": 2,
  	"name": "Linkless",
  	"short_name": "Avoid distracting links and focus on reading.",
  	"version": "0.1",
  	"content_scripts": [
	  	{
		    "matches": [
		      "<all_urls>"
		    ],
		    "js": ["jquery-2.1.3.min.js", "content.js"]
	  	}
	],
	"browser_action": {
	  "default_icon": "icon.png"
	},
	"background": {
		"persistent": true,
	  	"scripts": ["background.js"]
	},
	"icons": {
		"16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}